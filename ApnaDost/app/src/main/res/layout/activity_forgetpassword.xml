<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgetpassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forget_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textStyle="bold"
                android:textColor="@color/maincolor"
                android:textSize="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/_70sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/forget_email"
                android:layout_below="@id/forget_password_text"
                android:hint="Email"
                android:background="@drawable/edittext_theme"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:maxLength="30"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:drawableStart="@drawable/email"
                android:drawablePadding="@dimen/_5sdp"
                android:textCursorDrawable="@drawable/cursor_theme"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/forget_reset_button"
                android:layout_below="@id/forget_email"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_button"
                android:layout_marginLeft="@dimen/_50sdp"
                android:text="Reset Password"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/forget_backtologin_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Login"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/maincolor"
                android:textStyle="bold"
                android:layout_below="@id/forget_reset_button"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>